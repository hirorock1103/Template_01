<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForthActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="colorPrimary"
        android:id="@+id/title1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/sample1"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/title1"
        app:layout_constraintLeft_toRightOf="@+id/title1"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="colorAccent"
        android:layout_marginTop="20dp"
        android:id="@+id/title2"
        app:layout_constraintLeft_toLeftOf="@+id/title1"
        app:layout_constraintTop_toBottomOf="@+id/title1"
        />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/colorAccent"
        android:id="@+id/sample2"
        app:layout_constraintLeft_toLeftOf="@+id/sample1"
        app:layout_constraintBottom_toBottomOf="@+id/title2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="colorPrimaryDark"
        android:id="@+id/title3"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/title2"
        app:layout_constraintTop_toBottomOf="@+id/title2"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/sample3"
        app:layout_constraintLeft_toLeftOf="@+id/sample1"
        app:layout_constraintBottom_toBottomOf="@+id/title3"
        />

</android.support.constraint.ConstraintLayout>